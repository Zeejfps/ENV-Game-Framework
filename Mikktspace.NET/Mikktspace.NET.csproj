<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <Authors>Frooxius</Authors>
    <Company>Solirax</Company>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Description>A C# wrapper for the Mikktspace tangent space algorithm.</Description>
    <PackageProjectUrl>https://github.com/Neos-Metaverse/Mikktspace.NET</PackageProjectUrl>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <Folder Include="Native\Window" />
  </ItemGroup>

  <ItemGroup>
    <ContentWithTargetPath Include="Native\Windows\libmikktspace.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <TargetPath>libmikktspace.dll</TargetPath>
    </ContentWithTargetPath>
  </ItemGroup>

</Project>
